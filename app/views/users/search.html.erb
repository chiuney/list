<% provide(:title, "Search") %>

<main class="follow-container">
  <% if @user_or_list_or_shop == "1"%>
    <% @users.each do |u| %>
      <section class="follow-item">
        <div class="follow-item__follow-image">
          <% if u.persisted? && u.image? %>
            <%= image_tag u.image.url, class:"follow-item__follow-image--icon" %>
          <% else %>
            <%= image_tag 'no-image.png',class:"follow-item__follow-image--icon" %>
          <% end %>
        </div>
        <div class="follow-item__follow-user">
          <%= link_to u.user_name , user_path(u.id), class:"follow-item__follow-user--link" %>
        </div>
          <% unless u == current_user %>
            <div class="follow-item__follow-btn">
              <% if current_user.following?(u) %>
                <%= link_to 'フォローをやめる', unfollow_path(u.id), method: :POST,  class:"follow-item__follow-btn--unfollow" %>
              <% else %>
                <%= link_to 'フォローする', follow_path(u.id), method: :POST,class:"follow-item__follow-btn--following" %>
              <% end %>
            </div>
          <% end %>
      </section>
    <% end %>

  <% elsif @user_or_list_or_shop == "2" %>
  <div class="item-array">
      <% @lists.each do |l| %>
        <section class="item-array__item-detail">
        <% if l.photos.present?%>
          <%= link_to image_tag(l.shops[0].photos[0],class:"item-array__item-detail--img"), list_path(l.id) %>
        <% else %>
          <%= link_to image_tag("no-image.png", class:"item-array__item-detail--img"), list_path(l.id) %>
        <% end %>
          <%= link_to l.list_name, list_path(l.id),  class:"item-array__item-detail--name" %>
          <%= link_to "Listed by : #{l.user.user_name}", user_path(l.user_id),class:"item-array__item-detail--user" %>
        </section>
      <% end %>
      </div>

    <% else %>
    <div class="item-array">
        <% @shops.each do |s| %>
          <section class="item-array__item-detail">
          <% if s.photos.present?%>
            <%= link_to image_tag(s.photos[0], class:"item-array__item-detail--img"), shop_path(s.id) %>
          <% else %>
            <%= link_to image_tag("no-image.png", class:"item-array__item-detail--img"), shop_path(s.id) %>
          <% end %>
        <%= link_to s.shop_name, shop_path(s.id) , class:"item-array__item-detail--name" %>
        <%= link_to "Add by : #{s.user.user_name}", shop_path(s.id),class:"item-array__item-detail--user" %>
        </section>
      <% end %>
      </div>
  <% end %>

</mian>