<% provide(:title, "Add Shops") %>

<main class="item-input">

  <%= render 'shared/back' %>

  <%= form_with model: @list_shop ,url:shop_list_shops_path(shop_id: @shop.id), local: true do |f| %>

    <div class="item-info">
      <div class="item-data__item-name">
        <%= @shop.shop_name %>
      </div>

      <% @shop.lists.each do |list| %>
        <%= "Belong to #{list.list_name}" %>
      <% end %>

      <% if !@shop.lists.nil? %>
        <%= f.select :list_ids , List.where(user_id: current_user.id).map { |list| [ list.list_name ] }, {include_hidden: false}, {class: 'form-control',multiple: true} %>

        <%= hidden_field_tag "list_shop[list_ids][]", session[:list_id] %>

        <div class="item-info__item-submit">
          <%= f.submit "店を追加", class:"item-info__item-submit--btn" %>
        </div>
      <% else %>
        <%= link_to "リストを作成してください", new_list_path, class:"dropdown-list__dropdown-item--link" %>
      <% end %>
    </div>
  <% end %>

  <div class="googlemaps">
    <%= render 'shared/googlemaps' %>
  </div>

  <p>店の情報とか</p>

</main>
