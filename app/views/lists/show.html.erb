

<main class="item-show">
  <div class="item-data">
    <div class="item-data__item-name">
      <span class="item-data__item_name--form">
      <%= @list.list_name %>
      </span>
    </div>

    <div class="item-data__item-comment">
      <span class="item-data__item-comment--form" >
        <%= @list.list_comment %>
      </span>
    </div>
    
    <% if user_signed_in? && current_user.id == @list.user_id %>
    <div class="item-data__item-edit">
      <%= link_to "店を追加",   new_shop_path(id: @list.id),      class:"item-data__item-edit--form" %>
      <%= link_to "リスト編集", edit_list_path(id: @list.id),     class:"item-data__item-edit--form" %>
      <%= link_to "リスト削除", destroy_lists_path(current_user), class:"item-data__item-edit--form",
                                method: :delete, data: { confirm: '削除しますか？' } %>
    </div>
  <% end %>
  </div>

  <div class="googlemaps">
    <h2>googolemap</h2>
    <div id='map'></div>
    
    <input id="address" type="textbox" value="#">
    <input type="button" value="Encode" onclick="codeAddress()">

    <style>
    #map {
      height: 600px;
      width: 600px;
    }
  </style>
  
  <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV["GOOGLEMAPS_API_KEY"]%>&callback=initMap" async defer></script>
  <%= javascript_pack_tag 'googlemaps/application' %>
  </div>

  <sction class="item-display">
    <div class="item-array">
      <div class="item-array__item-detail">
        <%= link_to image_tag("no-image.png", class:"item-array__item-detail--img"), new_shop_path(id: @list.id) %>
        <%= link_to "店を追加", new_shop_path(id: @list.id), class:"item-array__item-detail--name" %>
      </div>
      <% @shops.each do |s| %>
        <div class="item-array__item-detail">
          <%= link_to image_tag("kaisen.jpeg", class:"item-array__item-detail--img"), shop_path(s.id) %>
          <%= link_to s.shop_name, shop_path(s.id) , class:"item-array__item-detail--name" %>
        </div>
      <% end %>
    </div>
  </section>
</main>