<% provide(:title, "Sign in") %>

<section class="signin-container">
  <h1 class="signin-container__signin-title">リストアプリへようこそ！</h1>

  <div class="signin-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="signin-form__signin-item">
     <%= form.text_field :user_name, placeholder: "ユーザーネーム", autofocus: true, class:"signin-form__signin-item--form" %>
    </div>

    <div class="signin-form__signin-item">
     <%= form.password_field :password, placeholder: "パスワード", autocomplete: "current-password", class:"signin-form__signin-item--form" %>
    </div>

    <div>
      <p>ユーザーネーム : sample<p>
      <p>パスワード　　 : sample<p>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="signin-form__signin-condition">
    <%= form.check_box :remember_me, class:"signin-form____signin-condition--check" %>
    <%= form.label :remember_me, class:"signin-form____signin-condition--remember" %>
    </div>
    <% end %>

    <div class="signin-form__forget-password">
    <%= link_to "パスワードを忘れた場合" , "#", class:"signin-form__forget-password--link" %>
    </div>

    <div class="signin-form__signin-item">
    <%= form.submit "ログイン", class:"signin-form__signin-item--submit" %>
    </div>
    <% end %>
  </div>

  <p class="signin-container__signin-rules">続行すると、リストアップの<%= link_to "利用規約", "#" %>と<%= link_to "プライバシーポリシー", "#" %>に同意したものとみなされます。</p>
  <p class="signin-container__move-signup">リストアップを初めて利用する場合：<%= link_to "新規登録",  new_user_registration_path %><p>
</section>